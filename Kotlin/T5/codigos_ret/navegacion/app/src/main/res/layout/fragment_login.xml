<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLogin"
    android:padding="48dp"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imagenLogin"
        />

    <EditText
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editCorreo"
        android:inputType="textEmailAddress"
        android:hint="por favor introduce tu correo"
        android:gravity="center"
        />

    <EditText
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPass"
        android:inputType="textPassword"
        android:hint="por favor introduce tu pass"
        android:gravity="center"
        />

    <Button
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesion"
        android:id="@+id/bntIniciar"
        />
    <TextView
        android:clickable="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textoRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aun no tienes cuenta?. Pulsa para crear"
        />

</LinearLayout>