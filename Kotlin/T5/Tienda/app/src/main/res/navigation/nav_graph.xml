<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.tienda.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_FirstFragment_to_miFragment"
            app:destination="@id/miFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.tienda.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/miFragment"
        android:name="com.example.tienda.MiFragment"
        android:label="MiFragment"
        tools:layout="@layout/fragment_mio"
        >
        <action
            android:id="@+id/action_miFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
</navigation>